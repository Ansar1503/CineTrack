generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum EntryType {
  Movie
  TV_Show
}

model Entry {
  id          String    @id @default(uuid())
  title       String
  type        EntryType
  director    String
  genre       String?
  cast        String?
  budget      String?
  boxOffice   String?
  language    String?
  country     String?
  location    String?
  duration    String
  yearOrTime  String
  rating      Float?
  posterUrl   String?
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entries Entry[]
}
